<!DOCTYPE HTML>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <script src="/js/dependencies/jQuery.js"></script>
  <script src="/js/dependencies/Vue.js"></script>
  <script src="/js/dependencies/Socket.io.js"></script>
  <script src="/js/Main.js"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="/styles/mdl.css">
  <script defer src="/js/dependencies/mdl.js"></script>
</head>
<body>
<div class="mdl-grid" id="app">
  <div class="mdl-cell mdl-cell--1-col"></div>
  <div class="mdl-cell mdl-cell--10-col">
    <div v-for="event in events" transition="fade">
      <div class="mdl-card mdl-shadow--2dp" style="width: 100%;">
        <div class="mdl-card__title">
          <h2 class="mdl-card__title-text">
            {{{ event.title }}}
            <h4 class="mdl-card__subtitle-text">{{ event.spiderName }} # {{ event.hash }} : {{ event.level }}</h4>
          </h2>
        </div>
        <div class="mdl-card__supporting-text">
          {{ event.content }}
        </div>
        <div class="mdl-card__menu">
          <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" v-on:click="removeEvent($index)">
            <i class="material-icons">close</i>
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--1-col"></div>
</div>
</body>
<style>
  .fade-transition {
    transition: all .3s ease;
  }

  .fade-enter, .fade-leave {
    opacity: 0;
  }

  .important {
    color: red;
  }
</style>
</html>
